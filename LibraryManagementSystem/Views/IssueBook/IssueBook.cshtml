@model List<LibraryManagementSystem.Models.IssueBook>

@{
    ViewData["Title"] = "Issue Books";
}

<div class="text-center">
    <h1 class="display-4">Issue Books</h1>
    <br />
    <hr />

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Book Name</th>
                <th>Student Name</th>
                <th>Issue Date</th>
                <th>Return Date</th>
                <th>Returned?</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Book?.Name</td>
                    <td>@item.Student?.Name</td>
                    <td>@item.IssueDate.ToShortDateString()</td>
                    <td>@item.ReturnDate?.ToShortDateString()</td>
                    <td>@(item.IsReturned ? "Yes" : "No")</td>
                    <td>
                        <a asp-controller="IssueBook" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-controller="IssueBook" asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-controller="IssueBook" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-controller="IssueBook" asp-action="Create" class="btn btn-primary">Issue New Book</a>
</div>
